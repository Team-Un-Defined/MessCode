<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.messcode.client.views.chat.ChatClientController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <Button mnemonicParsing="false" onAction="#inviteToPmButton" text="%invite_to_pm" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" top="50.0" />
                        </VBox.margin>
                    </Button>
                    <Label fx:id="invitePmErrorLabel" textFill="RED" wrapText="true" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets left="10.0" right="10" />
                        </VBox.margin>
                        <font>
                            <Font size="11.0" />
                        </font>
                    </Label>
                    <Label fx:id="userDisplayedName" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets left="10.0" right="10" />
                        </padding>
                    </Label>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label contentDisplay="CENTER" text="%online" textAlignment="CENTER">
                            <VBox.margin>
                                <Insets left="80.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ListView fx:id="usersListFXML" prefHeight="400.0" prefWidth="226.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </ListView>
                  <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER" text="%dark_theme" HBox.hgrow="ALWAYS" />
                              <ToggleSwitch fx:id="toggleSwitch" alignment="CENTER" contentDisplay="CENTER" HBox.hgrow="ALWAYS">

                        </ToggleSwitch>
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </HBox>

                    </children>
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <ListView fx:id="messagesListFXML" editable="false" prefHeight="438.0" prefWidth="348.0" VBox.vgrow="ALWAYS" />
                        <HBox>
                            <children>
                                <TextField fx:id="textField" HBox.hgrow="ALWAYS" />
                                <Button mnemonicParsing="false" onAction="#sendButton" text="%send" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
